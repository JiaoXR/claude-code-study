{
  "manifest_version": 3,
  "name": "飞书收藏插件",
  "version": "1.0.0",
  "description": "将网页收藏同步到飞书多维表格，支持添加备注和标签",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.feishu.cn/*",
    "https://*.larksuite.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "飞书收藏"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "options/options.html"
}